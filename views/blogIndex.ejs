<!DOCTYPE html>
<html>
<% include partials/header %>
<body>
  <div id="blogBody">
    <div class="headerUnderNav">AARON'S BLOG</div>
    <!-- Add a <table> element to properly structure the data -->
    <table>
      <thead>
        <!-- Your table header content here if needed -->
      </thead>
      <tbody>
        <!-- Loop through the bloglist array -->
        <% for(var i=0; i < bloglist.length; i++) { %>
        <tr>
          <td>
            <div id="titleHeader">
              <%= bloglist[i].blogtitle %>
            </div>
          </td>
          <td>
            <div id="blogEntry">
              <%= bloglist[i].blogentry %>
            </div>
          </td>
          <td>
            <!-- Move the forms inside the loop to access bloglist[i]._id -->
            <form action="/editPost/edit/<%= bloglist[i]._id %>">
              <button type="submit" class="editButtons">Edit</button>
            </form>
            <form action="/editPost/delete/<%= bloglist[i]._id %>" method="post">
              <button type="submit" class="editButtons">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>